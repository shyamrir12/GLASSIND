<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/imageView"
                android:id="@+id/l1">
                <EditText
                    android:id="@+id/editTextWorkingDate"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Working Date" />

                <EditText
                    android:id="@+id/editTextPartyName"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Party Name" />

                <EditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Location" />
                <EditText
                    android:id="@+id/editTextPINo"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="PINo" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/l1"
                android:layout_toRightOf="@id/imageView"
                android:id="@+id/L2"

              >

                <EditText
                    android:id="@+id/editTextworkOrderNo"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="work Order No" />

                <EditText
                    android:id="@+id/editTextThick"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Thick" />
                <EditText
                    android:id="@+id/editTextColor"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Color" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/L2"
                android:layout_toRightOf="@id/imageView"
                android:id="@+id/L3">

                <EditText
                    android:id="@+id/editTextBTD"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="BTD" />

                <EditText
                    android:id="@+id/editTextSizeIn"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="SizeIn" />
                <EditText
                    android:id="@+id/editTextActualSize"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="ActualSize" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/L3"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/imageView"
                 android:id="@+id/L4">

                <EditText
                    android:id="@+id/editTextHole"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Hole" />

                <EditText
                    android:id="@+id/editTextCut"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Cut" />
                <EditText
                    android:id="@+id/editTextQty"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Qty" />
                <EditText
                    android:id="@+id/editTextAreaInSQM"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Area In SQM" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/L4"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/imageView">

                <EditText
                    android:id="@+id/editTextOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Order Date" />

                <EditText
                    android:id="@+id/editTextRemark"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Remark" />

                <EditText
                    android:id="@+id/editTextWeight"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Weight" />

            </LinearLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_below="@id/imageView"
                android:text="Course Tracking"  android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:background="@color/colorAccent"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>